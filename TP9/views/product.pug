include includes/head.pug
    
body
    include includes/header.pug

    section(class="m-5")
        if product
            table(class="table")
                thead
                    tr
                        th(scope="col") Id
                        th(scope="col") Title
                        th(scope="col") Price
                        th(scope="col") Image
            
                tbody
                    tr
                        th(scope="row")= product.id
                        
                        td= product.title
                        
                        td= product.price
                        
                        td
                            img(src=product.thumbnail class="w-25 h-auto")
        else
            div(class="alert alert-danger" role="alert") 
                p Couldn't find matching product!
                    
    include includes/bootstrap.pug         
