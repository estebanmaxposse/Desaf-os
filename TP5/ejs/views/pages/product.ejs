<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>

            <div class="m-5">
                <% if (product) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Price</th>
                                <th scope="col">Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <%= product.id %>
                                </th>
                                <td>
                                    <%= product.title %>
                                </td>
                                <td>
                                    <%= product.price %>
                                </td>
                                <td><img src=<%=product.thumbnail %> class="w-25 h-auto" /></td>
                            </tr>
                        </tbody>
                    </table>
                    <% } else { %>
                        <div class="alert alert-danger" role="alert">
                            <p>Couldn't find matching product!</p>
                        </div>
                        <% } %>
            </div>
            <% include('../partials/bootstrap') %>
    </body>

</html>